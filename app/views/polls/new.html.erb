<% @user = User.find(current_user.id) %>

  <% if @user.user_type == "free" && @user.score < 5 %>

    <p>You need a minimum of 5 points to create a poll. Answer
      <%="#{5-@user.score}"%>
      more polls to get enough points!</p>

  <% else%>
    <div class="section">
      <div class="container">
        <div class="columns is-centered">
          <div class="column is-4">
            <h2 class="title is-2">Create New Poll</h2>
            <%= form_for @poll do |f| %>
            <%= f.label :question %>
            <%= f.text_field :question %><br>
            <%= f.label :answer_one %>
            <%= f.text_field :answer_one %><br>
            <%= f.label :answer_two %>
            <%= f.text_field :answer_two %><br>
            <%= f.hidden_field :user_id, :value => @user.id %><br>

            <%= f.submit %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
