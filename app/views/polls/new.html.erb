<% @user = User.find(current_user.id) %>

<% if @user.user_type == “free” && @user.score < 5 %>

<p1> “You need a minimum of 5 points to create a poll. Answer #{<=%5-current_user.score%>} polls to get enough points!”</p>

<% else%>
<h1><%= Create new Poll %></h1>
  <%= form_for @poll do |f| %>
    <%= f.label :question %>
    <%= f.text_field :question %><br>
    <%= f.label :answer_one %>
    <%= f.text_field :answer_one %><br>
    <%= f.label :answer_two %>
    <%= f.text_field :answer_two %><br>
    <%= f.label :user_id %>
    <%= collection_select(:poll, :user_id, User.all, :id, :username) %><br>
    <%= f.submit %>
  <% end %>
<% end %>
