<% counter = 0 %>
  <div class="box">
    <h1 class="title is-1">Leaderboards</h1>
    <br>

    <% @users.order(score: :desc).each do |user| %>
      <div class="box">
        <ol>
          <%=counter += 1%>.
          <%= link_to user.name, user_path(user) %>
          <% if user.user_type != "free" %>
            ✔️<% end %>
          <br>
          Score:
          <%= user.score %>
          <br>
          <a class="button is-right is-info is-hovered">Follow</a>
        </ol>
      </div>
      <br>
    <% end %>
  </div>
